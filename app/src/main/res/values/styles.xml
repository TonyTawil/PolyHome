<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DayToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/day_toggle_background</item>
        <item name="android:textColor">@color/day_toggle_text</item>
    </style>
    <style name="NumberPickerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/PolytechBlue</item>
    </style>
    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/PolytechBlue</item>
        <item name="strokeColor">@color/PolytechBlue</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="hintTextColor">?android:attr/textColorSecondary</item>
        <item name="boxStrokeColor">?android:attr/textColorSecondary</item>
        <item name="boxBackgroundColor">?android:attr/colorBackground</item>
    </style>
</resources> 