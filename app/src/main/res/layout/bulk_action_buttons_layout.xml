<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/openAllButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/open_all"
        android:textSize="12sp"
        android:textColor="@color/primary_text"
        android:background="@drawable/outlined_button_background"
        android:layout_marginEnd="4dp"
        android:minHeight="36dp"
        android:paddingHorizontal="12dp"
        android:includeFontPadding="false"
        android:gravity="center"/>

    <Button
        android:id="@+id/stopAllButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/stop_all"
        android:textSize="12sp"
        android:textColor="@color/primary_text"
        android:background="@drawable/outlined_button_background"
        android:layout_marginHorizontal="4dp"
        android:minHeight="36dp"
        android:paddingHorizontal="12dp"
        android:includeFontPadding="false"
        android:gravity="center"/>

    <Button
        android:id="@+id/closeAllButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/close_all"
        android:textSize="12sp"
        android:textColor="@color/primary_text"
        android:background="@drawable/outlined_button_background"
        android:layout_marginStart="4dp"
        android:minHeight="36dp"
        android:paddingHorizontal="12dp"
        android:includeFontPadding="false"
        android:gravity="center"/>

</LinearLayout> 